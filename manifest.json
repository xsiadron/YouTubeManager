{
    "manifest_version": 3,
    "name": "YouTube Manager",
    "version": "1.3.0",
    "description": "Add fine‑grained (1%) volume control with hover‑activated text readout and arrow‑key adjustments directly in YouTube’s player.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ]
}